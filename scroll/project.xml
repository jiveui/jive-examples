<?xml version="1.0" encoding="utf-8"?>
<project>
    <meta title="Jive Heart" package="jive.examples.scroll" version="0.0.1" company="Jive" />

    <!-- output -->
    <app main="Application" file="scroll" path="bin" />

    <window width="750" height="1334" background="0xFFFFFF" fps="60" antialiasing="4" vsync="true" hardware="true"/>
